@ARTICLE{yang2024quantumseucirty,
  title={Layer-Wise Security Framework and Analysis for the Quantum Internet}, 
  author={Yang, Zebo and Ghubaish, Ali and Jain, Raj and Al-Fuqaha, Ala and Erbad, Aiman and Kompella, Ramana and Shapourian, Hassan and Nejabati, Reza},
