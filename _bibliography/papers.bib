@article{yang2022decentralization,
  title={Decentralization Using Quantum Blockchain: A Theoretical Analysis},
  author={Yang, Zebo and Salman, Tara and Jain, Raj and Di Pietro, Roberto},
  journal={IEEE Transactions on Quantum Engineering},
